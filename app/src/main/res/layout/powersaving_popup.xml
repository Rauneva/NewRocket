<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#27282D">

    <include
        layout="@layout/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="#27282D"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/ultra_power_saving_mode"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="bat_med.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/addedtimedetail"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="#FFFFFF"
            android:text="@string/extended_battery_up_to_10h_30m"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/applied"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/shape_back_bat"
            android:text="@string/apply"
            android:layout_weight="0.9"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="74dp"
            android:paddingEnd="74dp"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp">
        <include
            android:id="@+id/i_native"
            layout="@layout/native_layout"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>