<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/btn_white">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#46a3f9">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash_wight"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </FrameLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#de000000"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="6sp"
        android:text="@string/notif_removed_app"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1.5sp"
        android:text="@string/notif_recommended"
        android:textColor="#99000000"
        android:textSize="13sp"
        android:textStyle="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="@string/clean"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="18dp"
        android:background="@drawable/shape_btn_bat_notif"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>



</FrameLayout>